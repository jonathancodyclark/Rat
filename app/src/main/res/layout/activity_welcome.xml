<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jccla.rat.Controller.WelcomeActivity">

    <RelativeLayout
        android:layout_width="389dp"
        android:layout_height="522dp"
        android:layout_marginLeft="-2dp"
        android:layout_marginTop="-6dp"
        android:background="@drawable/background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        >

        <com.dd.CircularProgressButton
            android:id="@+id/login_button"
            android:layout_width="259dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp"
            android:elevation="0dp"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cpb_cornerRadius="48dp"
            app:cpb_textIdle="Login"
            android:layout_above="@+id/tvRegister"
            android:layout_alignLeft="@+id/register_button"
            android:layout_alignStart="@+id/register_button" />

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="39dp"
            android:gravity="center"
            android:text="DANG THE NYC RATS"
            android:textColor="#FFFFFF"
            android:textSize="38sp"
            android:textStyle="bold|italic"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Don't Have An Account?"
            android:textColor="#FFFFFF"
            android:textSize="19sp"
            android:textStyle="bold"
            android:layout_above="@+id/register_button"
            android:layout_alignRight="@+id/Title"
            android:layout_alignEnd="@+id/Title" />

        <com.dd.CircularProgressButton
            android:id="@+id/register_button"
            android:layout_width="259dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginBottom="99dp"
            android:text="Click to Register"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cpb_cornerRadius="48dp"
            app:cpb_textIdle="Register"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/Title"
            android:layout_alignEnd="@+id/Title"
            android:layout_marginRight="52dp"
            android:layout_marginEnd="52dp" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ratmoving"
            android:layout_above="@+id/register_button"
            android:layout_alignRight="@+id/Title"
            android:layout_alignEnd="@+id/Title" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
